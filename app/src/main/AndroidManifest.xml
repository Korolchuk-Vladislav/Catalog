<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.korolchuk.catalog">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name="ru.korolchuk.catalog.other.Catalog">
        <activity
            android:name="ru.korolchuk.catalog.ui.activity.OpenScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ru.korolchuk.catalog.ui.activity.NewUserActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="ru.korolchuk.catalog.ui.activity.MainAppActivity"
            android:label="@string/title_activity_main_app_page"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="ru.korolchuk.catalog.ui.activity.IndividualProductActivity"
            android:label="@string/title_activity_individual_product"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="ru.korolchuk.catalog.ui.activity.ShoppingCartActivity" />
        <activity android:name="ru.korolchuk.catalog.ui.activity.CheckOutScreenActivity"></activity>
    </application>

</manifest>